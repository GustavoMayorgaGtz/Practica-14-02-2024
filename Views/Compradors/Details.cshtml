@model Practica_14_02_2024.Models.Comprador

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Vincula tu hoja de estilos -->
    <link href="~/css/details.css" rel="stylesheet" type="text/css" />
</head>
<body>
<h1>Detalles de comprador  @Html.DisplayFor(model => model.Nombre)</h1>
<div>
    <hr />
    <div class="dataContainer">
        <!--------------------------------------------->
        <div class="group">
           <label>
                    @Html.DisplayNameFor(model => model.Telefono)
           </label>
           <span>
                    @Html.DisplayFor(model => model.Telefono)
           </span>
           <hr />
        </div>
         <!--------------------------------------------->
             <div class="group">
           <label>
                    @Html.DisplayNameFor(model => model.Correo)
           </label>
           <span>
                    @Html.DisplayFor(model => model.Correo)
           </span>
           <hr />
        </div>
         <!--------------------------------------------->
             <div class="group">
           <label>
                    @Html.DisplayNameFor(model => model.Activo)
           </label>
           <span>
                    @Html.DisplayFor(model => model.Activo)
           </span>
           <hr />
        </div>
         <!--------------------------------------------->
           <div class="group">
           <label>
                    @Html.DisplayNameFor(model => model.URLpath)
           </label>
                @{
                    var urlPath = @Html.DisplayFor(model => model.URLpath);
                }
                    <img src="@urlPath" alt="Descripción de la imagen">
           <hr />
        </div>
         <!--------------------------------------------->
         <div class="group">
           <label>
                    @Html.DisplayNameFor(model => model.FechaRegistro)

           </label>
               <span>
                    @Html.DisplayFor(model => model.FechaRegistro)
               </span>
           <hr />
        </div>
         <!--------------------------------------------->
    </div>
</div>
<div>
    <a class="btnEdit" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btnBack" asp-action="Index">Back to List</a>
</div>
</body>
